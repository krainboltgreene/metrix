{
  "name": "metrix",
  "version": "1.0.0",
  "description": "The lifeblood of your product: Metadata of the data.",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run build",
    "build": "npm-run-all --parallel build:tmp build:client build:assets",
    "build:tmp": "rm -rf './tmp/' && mkdir -p './tmp/'",
    "build:client": "browserify --transform babelify --transform cssify --entry './application/client/index.js' --outfile './tmp/index.js'",
    "build:assets": "gulp build",
    "watch": "npm-run-all --parallel watch:client watch:assets",
    "watch:client": "watchify --transform babelify --transform cssify --entry './application/client/index.js' --outfile './tmp/index.js'",
    "watch:assets": "gulp watch",
    "lint": "eslint './application/'",
    "test": "mocha --compilers js:babel-register './application/**/test.js'",
    "start": "npm-run-all --parallel build watch service",
    "service": "npm-run-all --parallel service:server service:worker",
    "service:server": "babel-node './application/server/index.js'",
    "service:worker": "babel-node './application/worker/index.js'"
  },
  "author": "Kurtis Rainbolt-Greene (@krainboltgreene) <me@kurtisrainboltgreene.name>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laurelandwolf/metrix.git"
  },
  "keywords": [
    "metrics",
    "dashboard",
    "data",
    "analysis"
  ],
  "bugs": {
    "url": "https://github.com/krainboltgreene/metrix/issues"
  },
  "homepage": "https://krainboltgreene.github.io/metrix",
  "engines": {
    "node": "^6",
    "npm": "^3"
  },
  "devDependencies": {
    "babel": "^6",
    "babel-cli": "^6",
    "babel-eslint": "^6",
    "babel-plugin-closure-elimination": "^1",
    "babel-plugin-import-asserts": "^2",
    "babel-plugin-ramda": "^1",
    "babel-plugin-relative-import": "^1",
    "babel-plugin-transform-class-properties": "^6",
    "babel-plugin-transform-object-rest-spread": "^6",
    "babel-preset-react": "^6",
    "babel-preset-es2015": "^6",
    "babelify": "^7",
    "browserify": "^13",
    "chai": "^3",
    "cssify": "^1",
    "eslint": "^2",
    "eslint-plugin-babel": "^3",
    "eslint-plugin-immutable": "^1",
    "eslint-plugin-import": "^1",
    "eslint-plugin-mocha": "^4",
    "eslint-plugin-node": "^2",
    "eslint-plugin-react": "^5",
    "gulp": "^3",
    "gulp-cli": "^1",
    "gulp-concat": "^2",
    "mocha": "^2",
    "redux-devtools": "^3",
    "redux-devtools-diff-monitor": "^5",
    "redux-devtools-dock-monitor": "^1",
    "uglifyify": "^3",
    "watchify": "^3"
  },
  "dependencies": {
    "ago": "^1",
    "animate.css": "^3",
    "cors": "^2",
    "dotenv": "^2",
    "express": "^4",
    "hiredis": "^0.5.0",
    "human-format": "0.6.0",
    "knex": "0.11.9",
    "normalize.css": "^4",
    "npm-run-all": "^1",
    "pg": "^4",
    "prettysize": "0.0.3",
    "ramda": "0.21.0",
    "react": "^15",
    "react-dom": "^15",
    "react-redux": "^4",
    "react-sparklines": "^1",
    "react-spinkit": "^1",
    "redis": "^2",
    "redis-commands": "^1",
    "redux": "^3",
    "require-environment-variables": "^1",
    "s-ago": "^1",
    "then-redis": "^2"
  }
}
