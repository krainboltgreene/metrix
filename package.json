{
  "name": "metrix",
  "version": "1.0.0",
  "description": "The lifeblood of your product: Metadata of the data.",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all build --parallel watch",
    "postinstall": "npm run build",
    "build": "npm-run-all build:transpiled --parallel build:server build:worker build:assets build:client",
    "build:transpiled": "rm -rf './transpiled/' && mkdir -p './transpiled/client/' './transpiled/server'",
    "build:server": "babel --retain-lines --ignore './source/server/**/test.js' -d './transpiled/server/' './source/server/'",
    "build:worker": "babel --retain-lines --ignore './source/worker/**/test.js' -d './transpiled/worker/' './source/worker/'",
    "build:client": "browserify --verbose --transform babelify --entry './source/client/index.js' --outfile './transpiled/client/index.js'",
    "build:assets": "gulp build",
    "watch": "npm-run-all --parallel watch:build watch:lint watch:test",
    "watch:lint": "chokidar './source/' --command 'npm run lint --silent'",
    "watch:test": "mocha --watch --compilers js:babel-register './source/**/test.js'",
    "watch:service": "npm-run-all --parallel watch:service:server",
    "watch:build": "npm-run-all --parallel watch:build:server watch:build:client watch:build:assets",
    "watch:build:server": "babel --watch --retain-lines --ignore './source/server/**/test.js' -d './transpiled/server/' './source/server/'",
    "watch:build:client": "watchify --verbose --transform babelify --entry './source/client/index.js' --outfile './transpiled/client/index.js'",
    "watch:build:assets": "gulp watch",
    "test": "mocha --compilers js:babel-register './source/**/test.js'",
    "lint": "eslint './source/'",
    "service": "npm-run-all --parallel service:server service:worker ",
    "service:server": "node './transpiled/server/index.js'",
    "service:worker": "node './transpiled/worker/index.js'"
  },
  "author": "Kurtis Rainbolt-Greene (@krainboltgreene) <me@kurtisrainboltgreene.name>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laurelandwolf/metrix.git"
  },
  "keywords": [
    "metrics",
    "dashboard",
    "data",
    "analysis"
  ],
  "bugs": {
    "url": "https://github.com/krainboltgreene/metrix/issues"
  },
  "homepage": "https://krainboltgreene.github.io/metrix",
  "engines": {
    "node": "^6",
    "npm": "^3"
  },
  "devDependencies": {
    "babel": "^6",
    "babel-cli": "^6",
    "babel-eslint": "^6",
    "babel-plugin-relative-import": "^1",
    "babel-plugin-transform-class-properties": "^6",
    "babel-plugin-transform-object-rest-spread": "^6",
    "babel-preset-react": "^6",
    "babel-preset-latest": "^6",
    "babelify": "^7",
    "browserify": "^13",
    "chai": "^3",
    "cssify": "^1",
    "eslint": "^2",
    "eslint-plugin-babel": "^3",
    "eslint-plugin-immutable": "^1",
    "eslint-plugin-import": "^1",
    "eslint-plugin-mocha": "^4",
    "eslint-plugin-node": "^2",
    "eslint-plugin-react": "^5",
    "gulp": "^3",
    "gulp-cli": "^1",
    "gulp-concat": "^2",
    "mocha": "^2",
    "redux-devtools": "^3",
    "redux-devtools-diff-monitor": "^5",
    "redux-devtools-dock-monitor": "^1",
    "uglifyify": "^3",
    "watchify": "^3"
  },
  "peerDependencies": {
    "request": "^2",
    "request-promise": "^4",
    "knex": "0.11.9",
    "pg": "^4"
  },
  "dependencies": {
    "ago": "^1",
    "animate.css": "^3",
    "cors": "^2",
    "dotenv": "^2",
    "express": "^4",
    "hiredis": "0.5.0",
    "human-format": "0.6.0",
    "normalize.css": "^4",
    "npm-run-all": "^1",
    "prettysize": "0.0.3",
    "ramda": "0.21.0",
    "react": "^15",
    "react-dom": "^15",
    "react-redux": "^4",
    "react-sparklines": "^1",
    "react-spinkit": "^1",
    "redis": "^2",
    "redis-commands": "^1",
    "redux": "^3",
    "require-environment-variables": "^1",
    "s-ago": "^1",
    "then-redis": "^2"
  }
}
